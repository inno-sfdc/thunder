<aura:interface access="public" description="The standard interface for paging components.">
    <aura:attribute name="currentPage" access="public" type="Integer" default="1" description="Gets or sets the current page of the pager. The first page is 1, the last page is pageCount." />
    <aura:attribute name="endIndex" access="public" type="Integer" default="-1" description="Gets the index of the last item in the current page based on pageSize and totalItems." />
    <aura:attribute name="pageCount" access="public" type="Integer" default="0" description="Gets the total number of pages based on pageSize and totalItems." />
    <aura:attribute name="pageSize" access="public" type="Integer" default="25" description="Gets or sets the number of items per page." />
    <aura:attribute name="startIndex" access="public" type="Integer" default="-1" description="Gets the index of the first item in the current page based on pageSize and totalItems." />
    <aura:attribute name="totalItems" access="public" type="Integer" default="0" description="Gets or sets the total number of items the pager is describing." />
    <aura:attribute name="type" access="public" type="String" description="The concrete type of the pager. Accepted values are 'JumpToPage', 'NextPrevious', 'PageInfo', 'PageSize', or any namespaced component descriptor, e.g. ns:CustomPager." />
</aura:interface>